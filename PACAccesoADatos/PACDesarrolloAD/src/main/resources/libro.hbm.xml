<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entidades">

	<class name="Libro" table="libros">
		<id name="id" column="libro_id">
			<generator class="native" />
		</id>
		<property name="titulo" column="titulo" type="string"></property>
		<property name="autor" column="autor" type="string"></property>
		<property name="anho" column="anho" type="date"></property>
		<property name="disponible" column="disponible" type="boolean"></property>

	</class>

</hibernate-mapping>
